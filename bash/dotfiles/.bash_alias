alias sublime="subl3 $@"
alias xflux_br="xflux -l -15.7797200 -g -47.9297200"
alias galaxy="sudo mount -t cifs -o noperm //192.168.0.100/Volume_1 /home/blackbird/Galaxy/"

# Colorize the ls output ##
alias ls='ls --color=auto'

# Use a long listing format ##
alias ll='ls -la'

# Show hidden files ##
alias lh='ls -d .* --color=auto'

#Coding
alias fmake="sudo true && echo Compiling... &&  make -j3 PROFILE="'-O0'" > /dev/null && echo Installing... && sudo make install > /dev/null && echo Done."
alias tmake="make -C src/ check PROVE_FLAGS='--timer'"

# Git
alias ghelper="echo -e '\n\033[3;33mga\033[0m   : \033[0;32mgit add\033[0m                         ( adicionar arquivos à staging area )\n\033[3;33mgc\033[0m   : \033[0;32mgit commit\033[0m                      ( salvar alterações )\n\033[3;33mgca\033[0m  : \033[0;32mgit commit --amend\033[0m              ( alterar último commit )\n\033[3;33mgd\033[0m   : \033[0;32mgit diff -b HEAD [arquivos]\033[0m     ( diff em relação ao último commit )\n\033[3;33mgds\033[0m  : \033[0;32mgit diff -b [arquivos]\033[0m          ( diff em relação à staging area )\n\033[3;33mgl\033[0m   : \033[0;32mgit log --graph --pretty=format\033[0m ( vizualização dos últimos commits )\n\033[3;33mgrh\033[0m  : \033[0;32mgit checkout HEAD [arquivos]\033[0m    ( undo das modificações em relação ao HEAD )\n\033[3;33mgrs\033[0m  : \033[0;32mgit reset [arquivos]\033[0m            ( remove da staging area, mantendo alterações )\n\033[3;33mgru\033[0m  : \033[0;32mgit checkout [arquivos]\033[0m         ( undo das modificações em relação à staging area )\n\033[3;33mgs\033[0m   : \033[0;32mgit status\033[0m                      ( lista quais arquivos estão dentro e fora da staging area )\n\n\033[3;33mgr\033[0m   : help dos alias relacionados ao git reset/checkout\n\033[3;33mgnah\033[0m : reset & clean\n\n\033[0;32mgit stash <list|pop>\033[0m         ( guarda as modificações para troca de branches - opções p/ listar e re-aplicar )\n\033[0;32mgit commit --amend --no-edit\033[0m ( adiciona staging area no último commit sem alterar msg )\n\033[0;32mrebase -i origin/master\033[0m      ( merge da master sem fazer merge + opção de pick/drop commits )\n\033[0;32mgit bisect <start|bad|good>\033[0m  ( modo de inspecionar códigos em busca do commit que gerou um bug )\n\n\033[0;32mgit branch --merged master | grep -v \x27^[ *]*master$\x27 | xargs git branch -d\033[0m ( deleta branches aplicadas à master )\n'"
alias gnah="git reset --hard && git clean -df"
alias gr="echo -e 'grh : undo das modificações em relacao ao HEAD\ngru : undo das modificações em relacao a staging area\ngrs : remove da staging area'"
alias grh="git checkout HEAD $@" # undo das modificações em relacao a HEAD
alias gru="git checkout $@"      # undo das modificações em relacao a staging area
alias grs="git reset $@"         # remove da staging area
alias gs="git status"
alias ga="git add $@"
alias gd="git diff -b HEAD $@"  # diff em relação a HEAD
alias gds="git diff -b $@"      # diff em relação a staging area
alias gc="git commit $@"
alias gca="git commit --amend $@"
alias gl="git log --graph --decorate=auto --pretty=format:'%C(yellow)%h%Creset %Cblue%cn%Creset %s%Cred%d %Cgreen%cr.%Creset' $@"
